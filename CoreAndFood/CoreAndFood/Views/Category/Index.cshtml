@model List<CoreAndFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>
<br />
@using (Html.BeginForm())
{
    <p>
        Food Name:@Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Categori Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
    <th>@x.CategoryID</th>
    <th>@x.CategoryName</th>
    <th>@x.Status</th>
    <td><a href="/Category/CategoryDelete/@x.CategoryID" class="btn btn-danger">Delete</a></td>
    <td><a href="/Category/CategoryGet/@x.CategoryID" class="btn btn-success">Update</a></td>
    
    </tr>
    }
</table>
<a href ="/Category/CategoryAdd" class="btn btn-primary">New Category</a>
